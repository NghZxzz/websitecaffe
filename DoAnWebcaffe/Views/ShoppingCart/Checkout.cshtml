@model Order
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layoutcustomer.cshtml";
}

<h2>Checkout</h2>
<div class="col-xl-8 ftco-animate" style="background-image:url(~/images/bg_3.jpg);">
	<form asp-action="Checkout" method="post" class="billing-form ftco-bg-dark p-3 p-md-5">
		<h3 class="mb-4 billing-heading">Chi tiết hóa đơn</h3>
		<div class="row align-items-end">
			<div class="col-md-6">
				<div class="form-group">
					<label asp-for="ShippingAddress">Shipping Address</label>
					<input type="text" asp-for="ShippingAddress" class="form-control" placeholder="Địa chỉ giao hàng">
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label asp-for="Notes">Notes</label>
					<textarea asp-for="Notes" class="form-control" placeholder="Nội dung ghi chú"></textarea>
				</div>
			</div>
			<div class="w-100"></div>
			<div class="w-100"></div>
			<div class="col-md-6">
				<div class="form-group">
					<label asp-for="PhoneNumber">Số điện thoại</label>
					<input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Số điện thoại">
				</div>
			</div>
			<button type="submit" class="btn btn-primary">Place Order</button>
		</div>
	</form>
</div> <!-- .col-md-8 -->


