														<h3><a asp-controller="Shop" asp-action="detail" asp-route-id="@item.Id">@item.Name</a></h3>
														<p>@item.ShortDescription</p>
														<p class="price"><span>@item.Price vnđ</span></p>
														<p><a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity" class="btn btn-primary btn-outline-primary">Add to Cart</a></p>
													</div>
												</div>
											</div>
										}
									}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


