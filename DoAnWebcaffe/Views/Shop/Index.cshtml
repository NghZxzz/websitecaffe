
@model IEnumerable<DoAnWebcaffe.Models.Product>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layoutcustomer.cshtml";
	int numOfQuantity = 1;
}



<section class="ftco-menu mb-5 pb-5">
	<div class="container">
		<div class="row d-md-flex">
			<div class="col-lg-12 ftco-animate p-md-5">
				<div class="row">
					<div class="col-md-12 nav-link-wrap mb-5">
						<div class="nav ftco-animate nav-pills justify-content-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
							<a class="nav-link active" id="v-pills-0-tab" data-toggle="pill" href="#v-pills-0" role="tab" aria-controls="v-pills-0" aria-selected="true" >Cà phê</a>

							<a class="nav-link" id="v-pills-1-tab" data-toggle="pill" href="#v-pills-1" role="tab" aria-controls="v-pills-1" aria-selected="false" >Trà</a>

							<a class="nav-link" id="v-pills-2-tab" data-toggle="pill" href="#v-pills-2" role="tab" aria-controls="v-pills-2" aria-selected="false" >Nước giải khát</a>

							<a class="nav-link" id="v-pills-3-tab" data-toggle="pill" href="#v-pills-3" role="tab" aria-controls="v-pills-3" aria-selected="false" >Bánh ngọt</a>
						</div>
					</div>
					<div class="col-md-12 d-flex align-items-center">

						<div class="tab-content ftco-animate" id="v-pills-tabContent">

							<div class="tab-pane fade show active" id="v-pills-0" role="tabpanel" aria-labelledby="v-pills-0-tab">
								<div class="row">
								@foreach(var item in Model)
								{
									if(item.CategoryId == 3 && item.Status == null)
										{
											<div class="col-md-4">
												<div class="menu-entry">
													<a asp-controller="Shop" asp-action="detail" asp-route-id="@item.Id" class="img" style="background-image: url(@item.ImageUrl);"></a>
													<div class="text text-center pt-4">
														<h3><a asp-controller="Shop" asp-action="detail" asp-route-id="@item.Id">@item.Name</a></h3>
														<p>@item.ShortDescription</p>
														<p class="price"><span>@item.Price vnđ</span></p>
														<p><a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity" class="btn btn-primary btn-outline-primary">Add to Cart</a></p>
													</div>
												</div>
											</div>
										}
								}
								</div>
							</div>
							<div class="tab-pane fade" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-1-tab">
								<div class="row">
									@foreach (var item in Model)
									{
										if (item.CategoryId == 2 && item.Status == null)
