@model DoAnWebcaffe.Models.Product

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layoutcustomer.cshtml";
}

<h1>Detail</h1>

<section class="ftco-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 mb-5 ftco-animate">
				<a href="@Model.ImageUrl" class="image-popup"><img src="@Model.ImageUrl" class="img-fluid" alt="Colorlib Template"></a>
			</div>
			<div class="col-lg-6 product-details pl-md-5 ftco-animate">
				<h3>@Model.Name</h3>
				<p class="price"><span>@Model.Price vnđ</span></p>
				<p>@Model.ShortDescription</p>
				<p>
					@Model.Description
				</p>
				<div class="row mt-4">
					</div>
					<div class="w-100"></div>
				<form asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
					<input type="hidden" name="productId" value="@Model.Id" />
					<input type="number" name="quantity" class="form-control input-number" value="1" min="1" max="100" />
					<br />
					<button type="submit" class="btn btn-primary  py-3 px-5">Add to Cart</button>
				</form>
					@* <div class="input-group col-md-6 d-flex mb-3">
						<span class="input-group-btn mr-2">
							<button type="button" class="quantity-left-minus btn" data-type="minus" data-field="">
								<i class="icon-minus"></i>
							</button>
						</span>
					<input type="text" id="quantity" name="quantity" class="form-control input-number"  value="1" min="1" max="100">
						<span class="input-group-btn ml-2">
							<button type="button" class="quantity-right-plus btn" data-type="plus" data-field="">
								<i class="icon-plus"></i>
							</button>
						</span>
					</div> *@
				</div>
			@* <p><a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@Model.Id" asp-route-quantity="#quantity" class="btn btn-primary py-3 px-5">Add to Cart</a></p> *@
			</div>
		</div>
	</div>
</section>
