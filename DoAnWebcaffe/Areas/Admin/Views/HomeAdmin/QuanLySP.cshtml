@model IEnumerable<DoAnWebcaffe.Models.Product>

@{
    ViewData["Title"] = "QuanLySP";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    <div class="form-group form-inline">
        <br />
        Tìm Sản phẩm: @Html.TextBox("SearchString", "", new { @class = "from-control" })
        <input type="submit" class="btn btn-default" value="Tìm kiếm" />

    </div>
}
<h1>QuanLySP</h1>

<table class="table table-bordered">
    <thead>
        <tr class="table-warning">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table-success">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                    <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)VND
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                 <a asp-action="detailsproduct" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="DeleteSP" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
