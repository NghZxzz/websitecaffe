@model IEnumerable<DoAnWebcaffe.Models.OrderDetail>

@{
    ViewData["Title"] = "DetailsDH";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết đơn hàng</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Mã đơn hàng
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                Giá Bán
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Thành tiền
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.Id)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Product.ImageUrl)" width="150" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="QuanLyDH">Quay lại danh sách đơn hàng</a>
</div>